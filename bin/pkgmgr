#!/usr/bin/env python
# coding: utf-8
import sys

from docopt import docopt
from pkgmgr.cli import Cli

doc = """Pkgmgr, mininal package manager.

Usage:
  pkgmgr (list|update|upgrade|clean|conf) [--force]
  pkgmgr install <package>... [--force]
  pkgmgr reinstall <package>... [--force] [--with-deps]
  pkgmgr upgrade <package>... [--force]
  pkgmgr remove <package>... [--force]
  pkgmgr -h | --help
  pkgmgr -v | --version

Options:
  --force        Force confirmation questions.
  --with-deps    Reinstall deps too.
  -h --help      Show help.
  -v --version   Show version.
"""

if __name__ == '__main__':
	args = docopt(doc, version="0.0.1")
	cli = Cli(**args)
	cli.start()
