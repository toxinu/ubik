#!/usr/bin/env python
# coding: utf-8
import sys

from docopt import docopt
from ubik.cli import Cli

doc = """Ubik, mininal package manager.

Usage:
  ubik (list|update|clean|conf)
  ubik install <package>... [--force-yes]
  ubik reinstall <package>... [--force-yes] [--with-deps]
  ubik upgrade [--force-yes]
  ubik upgrade <package>... [--force-yes]
  ubik remove <package>... [--force-yes]
  ubik -h | --help
  ubik -v | --version

Options:
  --force-yes    Force confirmation questions.
  --with-deps    Reinstall deps too.
  -h --help      Show help.
  -v --version   Show version.
"""

if __name__ == '__main__':
	args = docopt(doc, version="0.0.1")
	cli = Cli(**args)
	cli.start()
